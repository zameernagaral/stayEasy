<% layout('layouts/boilerplate') %>

<section class="container listing-show-page mt-4">

  <!-- TITLE -->
  <header class="mb-4">
    <h2 class="fw-semibold"><%= listing.title %></h2>
    <p class="text-muted">
      <%= listing.location %>, <%= listing.country %>
    </p>
  </header>

  <!-- MAIN CARD -->
  <div class="row g-4">
    <div class="col-lg-8 mx-auto">

      <div class="card show-card listing-card shadow-sm">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing_image"
        />

        <div class="card-body">
          <p class="text-muted mb-1">
            Hosted by <b>@<%= listing.owner.username %></b>
          </p>

          <p class="card-text mt-2"><%= listing.description %></p>

          <p class="fw-semibold mt-2">
            ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
            <span class="text-muted fw-normal">/ night</span>
          </p>
        </div>
      </div>

      <!-- OWNER ACTIONS -->
      <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
      <div class="d-flex gap-3 mt-3">
        <a
          href="/listings/<%= listing._id %>/edit"
          class="btn edit-btn"
        >
          Edit
        </a>

        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn btn-outline-danger">
            Delete
          </button>
        </form>
      </div>
      <% } %>

      <!-- REVIEWS SECTION -->
      <div class="mt-5">

        <% if(currentUser) { %>
        <h4 class="fw-semibold mb-3">Leave a review</h4>

        <form
          action="/listings/<%= listing.id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation review-form"
        >
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
              <input type="radio" id="rate1" name="review[rating]" value="1" />
              <label for="rate1">1 star</label>
              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2">2 stars</label>
              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3">3 stars</label>
              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4">4 stars</label>
              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              rows="4"
              class="form-control"
              placeholder="Share your experience…"
              required
            ></textarea>
          </div>

          <button class="btn edit-btn btn-outline-dark">
            Submit Review
          </button>
        </form>
        <% } %>

    
        <% if(listing.reviews && listing.reviews.length > 0) { %>
        <hr class="my-4">

        <h5 class="fw-semibold mb-3">All reviews</h5>

        <div class="row g-3">
  <% for (review of listing.reviews) { %>
    <div class="col-md-6">
      <div class="review-card">
        <div class="review-header">
          <h6>@<%= review.author.username %></h6>
          <p class="starability-result" data-rating="<%= review.rating %>"></p>
        </div>

        <p class="review-text"><%= review.comment %></p>

        <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
          <form
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button type="submit" class="review-delete">Delete</button>
          </form>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

        <% } %>

      </div>
    </div>
  </div>
</section>
