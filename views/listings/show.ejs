<% layout('layouts/boilerplate') %>
<body>
    <br>
    <div class="row">
    <div class="card col-12" >
      <h1><%= listing.title %></h1>
        
  <img src="<%= listing.image %>" class="card-img-top showImg" alt="listing_image" >
  <br>
  <div class="card-body">
     
         <p><%= listing.description %></p>
         <p>
  &#8377; 
  <% if (listing.price != null) { %>
    <%= listing.price.toLocaleString("en-IN") %>
  <% } else { %>
    N/A
  <% } %>
</p>
         <p><%= listing.location %></p>
         <p><%= listing.country %></p>
        </div>

        <div>
         <form action="/listings/<%= listing._id %>/edit">
             <button class="newBtn btn btn-primary">Edit the listing</button>
         </form>
         <br>
         <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
             <button class="newBtn btn btn-primary">Delete the listing</button>
         </form>
         
        </div>
      
  </div>
    
</div>
<div>
  <hr>

  <h4>Leave a Review</h4>
  <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
    <div class="row">
      <!-- <div class="col-6">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Name" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a name</div>
      </div> -->
      <div class="col-6">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" name="review[rating]" id="rating" class="form-range" min="0" max="5" placeholder="Rating" required>
        

        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a rating</div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-12">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" class="form-control" placeholder="Comment" required></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a comment</div>
      </div>
    </div>
    <button type="submit" class="btn newBtn btn-secondary">Submit</button>
  </form>

  <br>
  <hr>

  <h4>All Reviews</h4>

  <% if (listing.reviews.length > 0) { %>
    <% for (let i = 0; i < listing.reviews.length; i++) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= listing.reviews[i].rating %>/5</h5>
          <p class="card-text"><%= listing.reviews[i].comment %></p>
          <form action="/listings/<%= listing._id %>/reviews/<%= listing.reviews[i]._id %>?_method=DELETE" method="post">
  <button class="newBtn btn btn-primary">Delete</button>
</form>
        </div>
      </div>
      <br>
    <% } %>
  <% } else { %>
    <p>No reviews yet</p>
  <% } %>


</div>

     
</body>
